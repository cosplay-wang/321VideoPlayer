<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center_vertical"
            android:background="#44000000"
            android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视频名字"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:layout_marginLeft="8dp"
                />
            <ImageView
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:id="@+id/iv_battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_battery_80"/>
            <TextView
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_time"
                android:text="12:00"/>
        </LinearLayout>

        <LinearLayout
            android:background="#44cccccc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bgn_voice"
                android:background="@drawable/voice_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <SeekBar
                android:id="@+id/seekbar_video_voice"
                android:minHeight="6dp"
                android:maxHeight="6dp"
                android:layout_weight="1"
                android:progress="20"
                android:progressDrawable="@drawable/progress_horizontal"
                android:thumb="@drawable/progress_dot_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:background="@drawable/btn_switch_player_select"
                android:id="@+id/btn_switch_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

   <LinearLayout
       android:layout_alignParentBottom="true"
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
       <LinearLayout
           android:background="#44cccccc"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center_vertical"
           android:orientation="horizontal">
           <TextView
               android:layout_marginLeft="8dp"
               android:text="10:00"
               android:id="@+id/tv_current_time"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <SeekBar
               android:layout_marginLeft="8dp"
               android:layout_marginRight="8dp"
               android:id="@+id/seekbar_video"
               android:minHeight="6dp"
               android:maxHeight="6dp"
               android:layout_weight="1"
               android:progress="20"
               android:progressDrawable="@drawable/progress_horizontal"
               android:thumb="@drawable/progress_dot_normal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:layout_marginRight="8dp"
               android:text="20:00"
               android:id="@+id/tv_durtion"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </LinearLayout>

       <LinearLayout
           android:background="#44000000"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center_vertical"
           android:orientation="horizontal">
           <Button
               android:layout_weight="1"
               android:id="@+id/btn_exit"
               android:background="@drawable/btn_exit_select"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <Button
               android:layout_weight="1"
               android:id="@+id/btn_pre"
               android:background="@drawable/btn_pre_select"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <Button
               android:layout_weight="1"
               android:id="@+id/btn_start_pause"
               android:background="@drawable/btn_start_pause_pause_select"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <Button
               android:layout_weight="1"
               android:id="@+id/btn_next"
               android:background="@drawable/btn_next_select"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <Button
               android:id="@+id/btn_switch_video_screen"
               android:background="@drawable/btn_switch_video_screen_select"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </LinearLayout>

   </LinearLayout>

</RelativeLayout>